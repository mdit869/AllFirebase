<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#53DAEC"
    tools:context=".LoginActivity"
    android:padding="30dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGGIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Sign In Google"
        android:textColor="#53DAEC"
        android:textSize="20dp"
        android:textStyle="bold"
        app:icon="@drawable/img_1"
        app:iconGravity="start"
        app:iconPadding="4dp"
        app:iconSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEmailIn"
        app:layout_constraintVertical_bias="0.5" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEmailIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Sign In Email"
        android:textColor="#53DAEC"
        android:textSize="20dp"
        android:textStyle="bold"
        app:icon="@drawable/img_1"
        app:iconGravity="start"
        app:iconPadding="4dp"
        app:iconSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGGIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btnEmailIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/img_1" />

</androidx.constraintlayout.widget.ConstraintLayout>